# Environment Configuration Template
# Copy this file to .env and customize as needed
# These environment variables override the default configuration

# =============================================================================
# LLM PROVIDER SETTINGS
# =============================================================================

# Default LLM provider (ollama, openai, anthropic, google)
AGENT_DEFAULT_PROVIDER=ollama

# Default model for the provider
AGENT_DEFAULT_MODEL=llama3.2:latest

# Default temperature (0.0 to 2.0)
AGENT_DEFAULT_TEMPERATURE=0.7

# Maximum tokens per response
AGENT_MAX_TOKENS=2048

# Request timeout in seconds
AGENT_TIMEOUT=300

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum iterations per agent execution
AGENT_MAX_ITERATIONS=200

# Maximum execution time in seconds (hard limit)
AGENT_MAX_EXECUTION_TIME=3600

# Maximum memory per agent in MB
AGENT_MAX_MEMORY_MB=1024

# Maximum concurrent agents
AGENT_MAX_CONCURRENT=50

# Decision confidence threshold (0.1 to 0.9)
AGENT_DECISION_THRESHOLD=0.6

# =============================================================================
# INFRASTRUCTURE SETTINGS
# =============================================================================

# Health check interval in seconds
AGENT_HEALTH_CHECK_INTERVAL=60

# Cache TTL in seconds
AGENT_CACHE_TTL=300

# Connection pool size
AGENT_CONNECTION_POOL_SIZE=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting - requests per minute
AGENT_RATE_LIMIT_PER_MINUTE=60

# Maximum file size for uploads in MB
AGENT_MAX_FILE_SIZE_MB=100

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
AGENT_LOG_LEVEL=INFO

# Enable metrics collection (true/false)
AGENT_ENABLE_METRICS=true

# =============================================================================
# EXTERNAL SERVICE SETTINGS
# =============================================================================

# Redis connection URL (optional)
# REDIS_URL=redis://localhost:6379/0

# PostgreSQL connection URL (optional)
# DATABASE_URL=postgresql://user:password@localhost/agents

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================

# Enable development mode (true/false)
# DEVELOPMENT_MODE=false

# Enable debug logging (true/false)
# DEBUG_MODE=false

# Test mode settings (true/false)
# TEST_MODE=false

# =============================================================================
# PROVIDER-SPECIFIC API KEYS
# =============================================================================

# OpenAI API Key (if using OpenAI provider)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Anthropic provider)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (if using Google provider)
# GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Enable Prometheus metrics (true/false)
# ENABLE_PROMETHEUS=false

# Prometheus metrics port
# PROMETHEUS_PORT=9090

# Enable distributed tracing (true/false)
# ENABLE_TRACING=false

# Jaeger endpoint for tracing
# JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# DISTRIBUTED DEPLOYMENT SETTINGS
# =============================================================================

# Enable distributed mode (true/false)
# ENABLE_DISTRIBUTED_MODE=false

# Node ID for distributed deployment
# NODE_ID=node-1

# Cluster name
# CLUSTER_NAME=agent_builder_cluster

# =============================================================================
# CUSTOM OVERRIDES
# =============================================================================

# Add any custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2
