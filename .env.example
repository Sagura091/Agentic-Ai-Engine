# Agentic AI Microservice Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
AGENTIC_APP_NAME="Agentic AI Microservice"
AGENTIC_VERSION="0.1.0"
AGENTIC_ENVIRONMENT="development"
AGENTIC_DEBUG="true"

# Server Settings
AGENTIC_HOST="0.0.0.0"
AGENTIC_PORT="8000"
AGENTIC_WORKERS="1"

# Security Settings
AGENTIC_SECRET_KEY="your-secret-key-change-this-in-production"
AGENTIC_ACCESS_TOKEN_EXPIRE_MINUTES="30"
AGENTIC_ALGORITHM="HS256"

# CORS Settings
AGENTIC_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5173,http://localhost:8001,*"

# Database Settings (PostgreSQL)
AGENTIC_DATABASE_URL="postgresql://openwebui:your_secure_password_here@postgres:5432/openwebui"
AGENTIC_DATABASE_POOL_SIZE="10"
AGENTIC_DATABASE_POOL_MAX_OVERFLOW="5"
AGENTIC_DATABASE_POOL_TIMEOUT="30"
AGENTIC_DATABASE_POOL_RECYCLE="3600"

# Redis Settings
AGENTIC_REDIS_URL="redis://redis:6379/1"
AGENTIC_REDIS_POOL_SIZE="10"

# LLM Integration Settings
AGENTIC_OLLAMA_BASE_URL="http://ollama:11434"
AGENTIC_OPENAI_API_KEY=""
AGENTIC_OPENAI_BASE_URL="https://api.openai.com/v1"

# OpenWebUI Integration Settings
AGENTIC_OPENWEBUI_BASE_URL="http://open-webui:8080"
AGENTIC_PIPELINES_BASE_URL="http://pipelines:9099"

# Agent Settings
AGENTIC_MAX_CONCURRENT_AGENTS="10"
AGENTIC_AGENT_TIMEOUT_SECONDS="300"
AGENTIC_DEFAULT_AGENT_MODEL="llama3.2:latest"

# LangGraph Settings
AGENTIC_LANGGRAPH_CHECKPOINT_BACKEND="redis"
AGENTIC_LANGGRAPH_STATE_TTL_SECONDS="3600"

# Monitoring Settings
AGENTIC_ENABLE_METRICS="true"
AGENTIC_ENABLE_TRACING="false"
AGENTIC_METRICS_PORT="9090"

# Logging Settings
AGENTIC_LOG_LEVEL="INFO"
AGENTIC_LOG_FORMAT="json"

# File Storage Settings
AGENTIC_DATA_DIR="./data"
AGENTIC_AGENTS_DIR="./data/agents"
AGENTIC_WORKFLOWS_DIR="./data/workflows"
AGENTIC_CHECKPOINTS_DIR="./data/checkpoints"
AGENTIC_LOGS_DIR="./data/logs"

# Performance Settings
AGENTIC_MAX_REQUEST_SIZE="16777216"  # 16MB
AGENTIC_REQUEST_TIMEOUT_SECONDS="60"
AGENTIC_WORKER_CONNECTIONS="1000"

# GPU Settings (if using GPU-enabled container)
AGENTIC_ENABLE_GPU="false"
AGENTIC_GPU_DEVICE_IDS="0"
AGENTIC_GPU_MEMORY_FRACTION="0.8"
