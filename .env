# Agentic AI Backend Configuration

# Environment
AGENTIC_ENVIRONMENT=development
AGENTIC_LOG_LEVEL=DEBUG

# Server Configuration
AGENTIC_HOST=localhost
AGENTIC_PORT=8888

# Ollama Configuration (Local Development)
AGENTIC_OLLAMA_BASE_URL=http://localhost:11434
AGENTIC_OLLAMA_TIMEOUT=120
AGENTIC_OLLAMA_RETRY_ATTEMPTS=3

# Agent Configuration
AGENTIC_DEFAULT_AGENT_MODEL=phi4:14b
AGENTIC_DEFAULT_AGENT_PROVIDER=ollama
AGENTIC_BACKUP_AGENT_MODEL=gpt-oss:120b
AGENTIC_MAX_CONCURRENT_AGENTS=10
AGENTIC_AGENT_TIMEOUT_SECONDS=300

# LLM Provider Settings
AGENTIC_ENABLE_OLLAMA=true
AGENTIC_ENABLE_OPENAI=false
AGENTIC_ENABLE_ANTHROPIC=false
AGENTIC_ENABLE_GOOGLE=false

# Database Configuration (PostgreSQL 17 with Docker)
AGENTIC_DATABASE_URL=postgresql://agentic_user:agentic_secure_password_2024@localhost:5432/agentic_ai

# Redis (Optional - for development without Docker)
# AGENTIC_REDIS_URL=redis://localhost:6379/0

# Security
AGENTIC_SECRET_KEY=dev-secret-key-change-in-production
AGENTIC_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
AGENTIC_ENABLE_METRICS=true
AGENTIC_ENABLE_TRACING=false
AGENTIC_METRICS_PORT=9090

# File Storage
AGENTIC_DATA_DIR=./data
AGENTIC_AGENTS_DIR=./data/agents
AGENTIC_WORKFLOWS_DIR=./data/workflows
AGENTIC_CHECKPOINTS_DIR=./data/checkpoints
AGENTIC_LOGS_DIR=./data/logs
